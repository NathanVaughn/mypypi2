{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install-pkgs",
            "command": "uv sync",
            "type": "shell"
        },
        {
            "label": "install-pre-commit",
            "command": "uv run pre-commit install",
            "type": "shell"
        },
        {
            "label": "install",
            "dependsOn": ["install-pkgs", "install-pre-commit"],
            "dependsOrder": "sequence"
        },
        {
            "label": "pre-commit",
            "command": "uv run pre-commit run --all-files",
            "type": "shell",
            "dependsOn": ["install-pkgs"]
        },
        {
            "label": "tests",
            "command": "uv run pytest --cov=app/ --cov-report html",
            "type": "shell",
            "dependsOn": ["install-pkgs"]
        },
        {
            "label": "run",
            "command": "uv run flask --app app.wsgi:create_app run",
            "type": "shell"
        }
    ]
}
